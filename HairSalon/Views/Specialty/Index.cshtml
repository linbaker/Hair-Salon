@using HairSalon.Models;

<h1>Specialties</h1>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var specialty in Model)
    {
      <li><a href="/specialty/@specialty.Id">@specialty.Type</a></li>
      <a href='/specialty/@specialty.Id/edit'>Edit</a>
      <form action="/specialty/@specialty.Id/delete" method="post">
      <button type="submit" name="button"> Delete </button>
      </form>
    }
  </ul>
}

<h4><a href="/specialty/new">Add a new specialty</a></h4>
<h4><a href="/">Return home</a></h4>
